<!DOCTYPE html>
<html lang="tr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <title>Anasayfa</title>

</head>


<body>

  <div class="top-part id="background">
    <nav class="navbar navbar-expand-xl      nav-bg ">
      <div class="container-fluid   ">
        <a itemid="logo" class="navbar-brand" asp-controller="Home" asp-action="Index" class="h1" id="logo">
          <span>&ltmertkacar&gt</span></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
          aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation" justify-content-end>
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse container " id="navbarNavDropdown">
          <ul class="navbar-nav  h6 mx-center position-md-fixed  ">

            <li class="nav-item d-flex active align-items-center     ">
              <a class="nav-link" asp-controller="Home">Anasayfa </a>
              <span class="stick p-2">|</span>
            </li>
            <li class="nav-item d-flex align-items-center  ">
              <a class="nav-link" asp-controller="about">Hakkımda</a>
              <span class="stick p-2">|</span>
            </li>
            <li class="nav-item d-flex align-items-center  ">
              <a class="nav-link" asp-controller="Certificates">Sertifikalarım</a>
              <span class="stick p-2">|</span>
            </li>
            <li class="nav-item d-flex align-items-center  ">
              <a class="nav-link" asp-controller="References">Referanslarım</a>
              <span class="stick p-2">|</span>
            </li>
            <li class="nav-item d-flex align-items-center  ">
              <a class="nav-link" asp-controller="Contact">İletişim</a>
              <span class="stick p-2">|</span>
            </li>
            <li class="nav-item d-flex align-items-center  ">
              <a class="nav-link" asp-controller="Blog">Projelerim</a>
              <span class="stick p-2">|</span>
            </li>
              <li class="nav-item d-flex align-items-center  ">
              <a class="nav-link" asp-controller="Blog">Blog</a>
              <span class="stick p-2">|</span>
            </li>
            <li class="nav-item d-flex align-items-center ">
              <a class="nav-link" asp-controller="Login">Giriş Yap</a>
              <span class="stick p-2">|</span>
            </li>

          </ul>

        </div>
 
      </div>

    </nav>

 

 

  </div>
 
    @RenderBody()
 



<div  class="bottom-0 postion-absolute" style=" ">
    <footer class="  footera">
    <div class="social-icons">
      <a href="https://www.linkedin.com/" target="_blank"><i class="fab fa-linkedin fa-2x"></i></a>
      <a href="https://github.com/" target="_blank"><i class="fab fa-github fa-2x"></i></a>
      <a href="https://twitter.com/" target="_blank"><i class="fab fa-twitter fa-2x"></i></a>
    </div>
      <p class="text-center">&copy; 2024 Mert Kaçar. Tüm hakları saklıdır.</p>
  </footer>
</div>
  @RenderSection("Scripts", required: false)

  <script src="/lib/bootstrap/js/bootstrap.min.js"></script>
  <script src="/js/script.js"></script>

   <script>
      // Sayfanın URL'sini alır
      var currentPage = window.location.pathname.toLowerCase();
       
      // Eğer anasayfadaysak arka plan resmini ekle
      if (currentPage === "/" || currentPage === "/home/index" || currentPage === "/home") {
          document.querySelector(".navbar").style.backgroundColor = "#333333";
          document.querySelector(".footera").style.backgroundColor="#333333"; 
          

      }
      else if (currentPage === "/about" || currentPage === "/about/index") {

       
       
          document.querySelector(".navbar").style.backgroundImage = "url(../img/wallabout6.jpg)";
          
          document.querySelector(".navbar").style.width = "100%";
           
         
      }
      else if (currentPage === "/certificates" || currentPage === "/certificates/index") {
           document.querySelector(".navbar").style.backgroundImage = "url(../img/wallabout6.jpg)";
    
        document.querySelector(".top-part").style.height = "auto";
 


      }   
      else if (currentPage === "/references" || currentPage === "/references/index") {
        document.querySelector(".navbar").style.backgroundImage = "url(../img/wallabout6.jpg)";
        document.querySelector(".top-part").style.height = "auto";
     

      }
       else if (currentPage === "/login" || currentPage === "/login/index") {
        document.querySelector(".navbar").style.backgroundImage = "url(../img/wallabout6.jpg)";
        document.querySelector(".top-part").style.height = "auto";
      }
    



      else {
        document.querySelector(".top-part").style.backgroundImage = "none";
        document.querySelector(".top-part").style.width = "0";
        document.querySelector(".top-part").style.height = "0";
      }




    // Navbar'ı genişlet veya daralt
    document.querySelector('.navbar-toggler').addEventListener('click', function () {
        var navbar = document.querySelector('.navbar');
        if (navbar.classList.contains('expanded')) {
            navbar.classList.remove('expanded');
        } else {
            navbar.classList.add('expanded');
        }
    });
    </script>
</body>

</html>